<% layout('layouts/boilerplate') %> 

<div class="container-fluid">
    <div class="row">
        <div class="col-3 bg-light">

            
            <h1 class="mt-3"><%= club.club_title %></h1>
            <div>
                <a href="/clubs/<%= club._id %>/currently_reading" class="d-block mb-3 nav-link active">Currently Reading</a>
                <a href="/clubs/<%= club._id %>/have_read" class="d-block mb-3 nav-link">Have Read</a>
                <a href="/clubs/<%= club._id %>/will_read" class="d-block mb-3 nav-link">Will Read</a>
            </div>
            <form action="/clubs/<%= club._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger mb-3">Delete</button>
            </form>
    </div>

    <div class="col-9">
        <div>
        <form action="/clubs/<%= club._id %>/currently_reading" method="POST">
            <div class="mb-3">
                <label class="form-label" for="currently_reading">Enter Book</label>
                <input class="form-control" type="text" id="currently_reading" name="reading[book_name]">
            </div>
            <button class="btn btn-primary">Add</button>
        </form>
        </div>

        <div>
            <% for(let reading of club.currently_reading){ %> 

                <p class="mt-3"><%= reading.book_name %> </p>        
                

                <% } %> 
        </div>

    </div>

    </div>
</div>